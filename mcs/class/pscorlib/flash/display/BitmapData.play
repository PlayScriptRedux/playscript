		public function getPixel(x:int, y:int):uint {
			if (mData==null)
				return 0;

			if (x < 0 || y < 0 || x >= width || y >= height) {			
				throw new System.ArgumentOutOfRangeException("XY position out of range");
			}
			
			// return color
			return mData[y * mWidth + x];
		}
		

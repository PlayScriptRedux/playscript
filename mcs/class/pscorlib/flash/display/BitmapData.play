		public function getVector(rect:Rectangle):Vector.<uint> {
			var v:Vector.<uint> = new Vector.<uint>(rect.width * rect.height);
			if (rect.left < 0 || rect.top < 0 || rect.right > this.width || rect.bottom > this.height) { 
				trace("Invalid rectangle for BitmapData.getVector()");
				return v;
			}
			if (mData==null)
				return v;
			var a:uint[] = v._GetInnerArray();
			var i:int = 0;
			var s:int = 0;
			for (var y:int = rect.top; y < rect.bottom; y++) {
				s = y * this.width + rect.left;
				for (var x:int = rect.left; x < rect.right; x++) {
					a[i] = mData[s];
					i++;
					s++;
				}
			}
			return v;
		}

